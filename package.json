{
  "name": "@depools/dao",
  "version": "0.0.1",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "lint": "solium --dir ./contracts",
    "test": "npm run test:unit",
    "test:unit": "buidler test --network buidlerevm",
    "test:gas": "REPORT_GAS=true buidler test --network localhost",
    "test:coverage": "buidler coverage --network coverage",
    "test:e2e": "ava -T 60000 -v",
    "truffle:dev": "truffle dev",
    "ganache-cli:test": "./node_modules/@aragon/test-helpers/ganache-cli.sh",
    "install:frontend": "cd app && npm install",
    "abi:extract": "truffle-extract --output abi/ --keys abi",
    "prepublishOnly": "truffle compile --all && npm run abi:extract -- --no-compile",
    "compile": "npm run compile:apps",
    "compile:apps": "lerna run --scope=@depools/apps-* --concurrency=4 --stream compile",
    "build": "npm run build:apps",
    "build:apps": "lerna run --scope=@depools/apps-* --concurrency=4 --stream build",
    "deploy": "npm run deploy:dev",
    "deploy:dev": "npm run deploy:apm:dev && deploy:apps:dev && deploy:tmpl:dev && deploy:dao:dev",
    "deploy:apm": "npm run deploy:apm:dev",
    "deploy:apps": "npm run deploy:apps:dev",
    "deploy:tmpl": "npm run deploy:tmpl:dev",
    "deploy:dao": "npm run deploy:dao:dev",
    "deploy:apm:dev": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:apm:dev",
    "deploy:apm:rinkeby": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:apm:rinkeby",
    "deploy:apm:mainnet": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:apm:mainnet",
    "deploy:apps:dev": "lerna run --scope=@depools/apps-* --concurrency=1 --stream publish:patch",
    "deploy:apps:rinkeby": "lerna run --scope=@depools/apps-* --concurrency=1 --stream publish:patch:rinkeby",
    "deploy:apps:mainnet": "lerna run --scope=@depools/apps-* --concurrency=1 --stream publish:patch:mainnet",
    "deploy:tmpl:dev": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:tmpl:dev",
    "deploy:tmpl:rinkeby": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:tmpl:rinkeby",
    "deploy:tmpl:mainnet": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:tmpl:mainnet",
    "deploy:dao:dev": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:dao:dev",
    "deploy:dao:rinkeby": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:dao:rinkeby",
    "deploy:dao:mainnet": "lerna run --scope=@depools/dao-template --concurrency=1 --stream deploy:dao:mainnet",
    "estimate-deposit-loop-gas": "npm run test:unit ./estimate_deposit_loop_gas.js"
  },
  "files": [
    "/abi",
    "/arapp.json",
    "/build",
    "/contracts",
    "/test"
  ],
  "keywords": [],
  "author": "MixBytes <hello@mixbytes.io>",
  "description": "",
  "devDependencies": {
    "@aragon/apps-finance": "^3.0.0",
    "@aragon/apps-token-manager": "^2.1.0",
    "@aragon/apps-voting": "^2.1.0",
    "@aragon/contract-helpers-test": "^0.1.0",
    "@aragon/templates-shared": "^1.0.1",
    "@aragon/test-helpers": "^2.1.0",
    "@aragon/toolkit": "0.0.7",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@nomiclabs/buidler": "^1.4.5",
    "@nomiclabs/buidler-truffle5": "^1.3.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "ava": "^3.12.1",
    "babel-plugin-istanbul": "^6.0.0",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eth-ens-namehash": "^2.0.8",
    "eth-gas-reporter": "^0.2.17",
    "ethereumjs-testrpc-sc": "^6.5.1-sc.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "solidity-coverage": "^0.7.10",
    "solium": "^1.2.5",
    "truffle": "^5.1.43",
    "truffle-extract": "^1.2.1",

    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "^2.1.2"

  },
  "dependencies": {
    "@aragon/os": "^4.4.0",
    "@truffle/contract": "^4.2.22",
    "openzeppelin-solidity": "2.0.0",
    "solidity-bytes-utils": "0.0.6",
    "solium": "^1.2.5",
    "yargs": "^16.0.3"
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "files": [
      "test/e2e/**/*.test.js"
    ],
    "concurrency": 5
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3",
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
