{
  "name": "@lido/dao",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*/app",
    "gasprofile"
  ],
  "scripts": {
    "lint": "yarn lint:sol && yarn lint:js",
    "lint:sol": "yarn lint:sol:solhint && yarn lint:sol:solium",
    "lint:js": "yarn lint:js:cmd .",
    "lint:js:fix": "yarn lint:js:cmd --fix .",
    "lint:js:cmd": "eslint --ext .js --cache --ignore-path .gitignore --ignore-pattern 'apps/*/app/' --ignore-pattern /gasprofile/",
    "lint:sol:solium": "solium --dir ./contracts",
    "lint:sol:solium:fix": "yarn lint:sol:solium --fix",
    "lint:sol:solhint": "solhint \"contracts/**/*.sol\" --ignore-path .soliumignore",
    "lint:sol:solhint:fix": "yarn lint:sol:solhint --fix",
    "test": "yarn run test:unit",
    "test:unit": "yarn run compile:6 && buidler test --network buidlerevm",
    "test:gas": "yarn run compile:6 && REPORT_GAS=true buidler test --network localhost",
    "test:coverage": "yarn run test:coverage:4 && yarn run test:coverage:6",
    "test:coverage:4": "buidler coverage --network coverage --testfiles test/0.4.24",
    "test:coverage:6": "buidler coverage --network coverage --testfiles test/0.6.12 --config buidler.config.6.js",
    "test:e2e": "npm run compile && ava -T 250000 -v",
    "estimate-deposit-loop-gas": "yarn run test:unit ./estimate_deposit_loop_gas.js",
    "compile": "yarn run compile:4 && yarn run compile:6",
    "compile:4": "buidler compile",
    "compile:6": "buidler compile --config buidler.config.6.js --force && buidler compile --config buidler.config.6.11.js --force",
    "deploy": "yarn run deploy:all",
    "deploy:all": "yarn compile && yarn deploy:aragon-env && yarn deploy:aragon-std-apps && yarn deploy:apm-and-template && yarn deploy:apps && yarn deploy:dao",
    "deploy:e2e:all": "yarn compile && yarn deploy:e2e:aragon-env && yarn deploy:e2e:aragon-std-apps && yarn deploy:e2e:apm-and-template && yarn deploy:e2e:apps && yarn deploy:e2e:dao",
    "deploy:aragon-env": "buidler run --no-compile ./scripts/deploy-aragon-env.js",
    "deploy:e2e:aragon-env": "NETWORK_NAME=e2e buidler run --no-compile ./scripts/deploy-aragon-env.js",
    "deploy:aragon-std-apps": "RELEASE_TYPE=major buidler run --no-compile ./scripts/deploy-aragon-std-apps.js --config ./buidler.config.aragon-apps.js",
    "deploy:e2e:aragon-std-apps": "NETWORK_NAME=e2e IPFS_API_URL=http://localhost:5001/api/v0 IPFS_GATEWAY_URL=http://localhost:8080 RELEASE_TYPE=major buidler run --no-compile ./scripts/deploy-aragon-std-apps.js --config ./buidler.config.aragon-apps.js",
    "deploy:apm-and-template": "buidler run --no-compile  ./scripts/deploy-lido-apm-and-template.js",
    "deploy:e2e:apm-and-template": "NETWORK_NAME=e2e buidler run --no-compile  ./scripts/deploy-lido-apm-and-template.js",
    "deploy:apps": "buidler run --no-compile ./scripts/deploy-lido-apps.js",
    "deploy:e2e:apps": "NETWORK_NAME=e2e buidler run --no-compile ./scripts/deploy-lido-apps.js",
    "deploy:app-pool": "APPS=depool yarn deploy:apps",
    "deploy:app-oracle": "APPS=depooloracle yarn deploy:apps",
    "deploy:app-staking-providers-registry": "APPS=staking-providers-registry yarn deploy:apps",
    "deploy:app-steth": "APPS=steth yarn deploy:apps",
    "deploy:dao": "buidler run --no-compile ./scripts/deploy-lido-dao.js",
    "deploy:e2e:dao": "NETWORK_NAME=localhost  buidler run --no-compile ./scripts/deploy-lido-dao.js"
  },
  "author": "MixBytes <hello@mixbytes.io>",
  "devDependencies": {
    "@aragon/apps-finance": "^3.0.0",
    "@aragon/apps-token-manager": "^2.1.0",
    "@aragon/apps-voting": "^2.1.0",
    "@aragon/buidler-aragon": "^0.2.9",
    "@aragon/contract-helpers-test": "^0.1.0",
    "@aragon/templates-shared": "^1.0.1",
    "@aragon/test-helpers": "^2.1.0",
    "@aragon/toolkit": "0.0.7",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.12.1",
    "@nomiclabs/buidler": "^1.4.7",
    "@nomiclabs/buidler-etherscan": "1.3.0",
    "@nomiclabs/buidler-ganache": "^1.3.3",
    "@nomiclabs/buidler-truffle5": "^1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.4",
    "@openzeppelin/test-helpers": "^0.5.6",
    "ava": "^3.13.0",
    "babel-plugin-istanbul": "^6.0.0",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eth-ens-namehash": "^2.0.8",
    "eth-gas-reporter": "^0.2.17",
    "ethereumjs-testrpc-sc": "^6.5.1-sc.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "solhint": "^3.2.2",
    "solidity-coverage": "^0.7.11",
    "solium": "^1.2.5",
    "truffle": "^5.1.43",
    "truffle-extract": "^1.2.1",
    "web3": "^1.3.0",
    "winston": "^3.3.3"
  },
  "dependencies": {
    "@aragon/os": "^4.4.0",
    "@openzeppelin/contracts": "3.1.0",
    "@truffle/contract": "^4.2.22",
    "ethers": "^5.0.19",
    "openzeppelin-solidity": "2.0.0",
    "solidity-bytes-utils": "0.0.6",
    "yargs": "^16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "yarn lint:js:fix"
  }
}
