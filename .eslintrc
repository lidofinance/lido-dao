{
  "env": {
    "node": true,
    "es2020": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "prettier",
    "prettier/standard"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "node",
    "prettier",
    "standard"
  ],
  "rules": {
    "max-len": ["error", { "code": 140, "ignoreUrls": true }],
    "no-undef": 1,
    "no-unused-vars": 1,
    "camelcase": 0,
    "eol-last": 1,
    "no-multiple-empty-lines": 1,
    "comma-dangle": 1,
    "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "jsx-quotes": [2, "prefer-single"],
    "no-useless-escape": 0,
    "valid-jsdoc": "error",
    "linebreak-style": [ "error", "unix" ]
  },
  "overrides": [
    {
      "files": [
        "./test{,-e2e}/{**/,}*.js",
      ],
      "env": {
        "mocha": true
      },
      "globals": {
        "artifacts": "readonly",
        "contract": "readonly",
        "web3": "readonly"
      }
    }
  ]
}
